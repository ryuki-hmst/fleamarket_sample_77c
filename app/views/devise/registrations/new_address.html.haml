%h2 住所情報登録
= form_with(model: @address, local: true) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :"送付先氏名"
    = f.text_field :last_name, placeholder:"例) 山田"
    = f.text_field :first_name, placeholder:"例) 太郎"
  .field
    = f.label :"送付先氏名カナ"
    = f.text_field :last_kana, placeholder:"例) ヤマダ"
    = f.text_field :first_kana, placeholder:"例) タロウ"
  .field
    = f.label :郵便番号
    = f.text_field :postal_code,{autofocus: true, placeholder: "例）123-4567"}
  .field
    = f.label :prefecture,"都道府県"
    = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--"
  .field
    = f.label :市町村
    = f.text_field :town, autofocus: true, placeholder: "例) 渋谷区"
  .field
    = f.label :番地
    = f.text_field :house_number, autofocus: true, placeholder: "例）神南1-18-2"
  .field
    = f.label :建物名
    = f.text_field :building_name, autofocus: true, placeholder: "例) フレーム神南坂 4階"
  .field
    = f.label :phone_number,"電話番号"
    = f.text_field :phone_number, placeholder: "例) 09012345678"
  
  = f.submit "登録"
