.search-box
  - if user_signed_in?
    %h2 ログインしています
    = link_to "ログアウト", destroy_user_session_path, method: :delete
  - else
    = link_to "新規登録", new_user_registration_path
    = link_to "ログイン", new_user_session_path
.main
  .items-box
    - @items.each do |item|
      - if !item.order_id.present?
        .item
          .item--img
            - item.images.each do |image|
              .productList
                = link_to item_path(item.id) do
                  %figure.productList--img
                    = image_tag image.url
                  .productList--body
                    %h3.name
                      #{item.name}
                    .details
                      %ul
                        %li
                          #{item.price}円
                      %p (税込)
  %section.pickupContainer
    %h2.head ピックアップブランド
    .productBox
      .productHead
        = link_to root_path do
          %h3.title アーカイバ
      .productLists
        - @items.each do |item|
          - if !item.order_id.present?
            - item.images.each do |image|
              .productList
                = link_to item_path(item.id) do
                  %figure.productList--img
                    = image_tag image.url
                  .productList--body
                    %h3.name
                      #{item.name}
                    .details
                      %ul
                        %li
                          #{item.price}円
                      %p (税込)
%aside.appBanner
  .inner
    %h2.inner__title だれでもかんたん、人生を変えるフリマアプリ
    %p.inner__text 今すぐ無料ダウンロード
    .inner__icon
      = link_to image_tag("app-store-9c5e28e8f81bd9912e0ded2f78821e04778a1356c05dc7c7bf1e88614be37c34.svg",width: "180",height:"53.3"),root_path, class: "aBtn"
      = link_to image_tag("google-play-469c63f1269e456307c4dde176b33cc3bbbbf142ac4d7369656010130149db1a.svg",width: "180",height:"53.3"),root_path, class: "gBtn"
.footer
  %ul.contents
    %li.content
      %h2.content__head FURIMAについて
      %ul
        %li
          = link_to "会社概要(運営会社)", root_path
        %li
          = link_to "プライバシーポリシー", root_path
        %li
          = link_to "FURIMA利用規約", root_path
        %li
          = link_to "ポイントに関する特約", root_path
    %li.content
      %h2.content__head FURIMAを見る
      %ul
        %li
          = link_to "カテゴリー一覧", root_path
        %li
          = link_to "ブランド一覧", root_path
    %li.content
      %h2.content__head ヘルプ&ガイド
      %ul
        %li
          = link_to "FURIMAガイド", root_path
        %li
          = link_to "FURIMAロゴ利用ガイドライン", root_path
        %li
          = link_to "お知らせ", root_path
  .footer__logo
    = link_to image_tag("logo-white.png",width:"134",height:"36"), root_path
  %p ©︎FURIMA
= link_to root_path do
  .purchaseBtn
    %span.purchaseBtn__text 出品する
    = image_tag("icon_camera.png", class: "purchaseBtn__icon")
              = image_tag image.url
          .item--name
            商品名：#{item.name}
          .item--price
            値段：#{item.price}円
